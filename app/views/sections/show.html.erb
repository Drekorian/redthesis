<% if @section %>
	<h2><%= @section.name %></h2>

	<% if !@section.theses.empty? %>
		<p><strong><%=t '.section_theses' %></strong></p>

		<ul>
			<% @section.theses.each do |thesis| %>
				<li>
					<%= link_to(thesis.name, thesis_path(thesis)) %>
					<span class="ink-label info"><%= thesis.thesis_type %></span>
				</li>
			<% end %>
		</ul>
	<% else %>
		<p><em><%=t '.no_theses' %></em></p>
	<% end %>
<% end %>

<p>
	<%= back_button(t('.back_button'), sections_path()) %>
</p>
